/* client/pages/movie_list/movie_list.wxss */
.movie-item {
  margin-top: 50rpx;
  height: 300rpx;
  width: 650rpx;
  display: flex;
  border: 5rpx solid rgba(0, 0, 0, 0.05);
}

.movie-image {
  height: 305rpx;
  width: 204rpx;
  position: relative;
  left: -2.5rpx;
  top: -2.5rpx;
}

.movie-info {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}

.movie-title {
  font-weight: bold;
}

.movie-category {
  font-size: 30rpx;
}

page:last-child {
  margin-bottom: 200rpx;
}