/* client/pages/comment_list/comment_list.wxss */
.tip-no-comment {
  font-size: 32rpx;
  margin-top: 100rpx;
  opacity: 0.6;
}

.comment-list {
  margin-top: 50rpx;
  width: 100%;
}

.comment-item {
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.048);
  border-top: 1px solid rgba(0, 0, 0, 0.048);
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.comment-userinfo {
  display: flex;
  width: 650rpx;
  margin-top: 50rpx;
}

.comment-avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}

.comment-nickName {
  margin-left: 40rpx;
  font-size: 34rpx;
  line-height: 84rpx;
  color: rgba(90, 109, 128, 0.945)
}

.comment-content {
  height: 80rpx;
  width: 650rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  line-height: 80rpx;
}