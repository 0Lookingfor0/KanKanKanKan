/**index.wxss**/

.movie-wrapper {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  margin-top: 50rpx;
}

.movie-image {
  width: 540rpx;
  height: 752rpx;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
}

.movie-title {
  text-align: center;
}

.recommend {
  display: flex;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid gainsboro;
  border-radius: 50%;
}

.recommend-text {
  margin-left: 15rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  opacity: 0.8;
}