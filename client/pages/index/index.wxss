/**index.wxss**/
page {
    background: rgb(247, 249, 251);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.movie-image {
  width: 540rpx;
  height: 752rpx;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
}

.movie-name {
  margin-bottom: 10rpx;
}

.recommend {
  display: flex;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid gainsboro;
  border-radius: 50%;
}

.recommend-text {
  margin-left: 15rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  opacity: 0.8;
}